<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/month_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/grid_image_height"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/month_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/indigo_500"
            android:padding="@dimen/grid_text_padding"
            android:textColor="@android:color/white"/>

        <ImageView
            android:id="@+id/mont_drag"
            android:layout_width="@dimen/drag_view_size"
            android:layout_height="@dimen/drag_view_size"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/drag_view_margin"
            android:src="@drawable/ic_fingerprint"
            tools:ignore="ContentDescription"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>